<!DOCTYPE html>
<html>
  <head>
    <title>Task List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="p-4">
    <div class="container">
      <h2 class="mb-4">All Tasks</h2>
      <ul class="list-group mb-4">
        <% tasks.forEach(task => { %>
        <li class="list-group-item mb-3">
          <strong><%= task.title %></strong>
          <div class="mt-2">
            <form method="GET" action="/tasks/<%= task.id %>" class="d-inline">
              <button type="submit" class="btn btn-outline-primary btn-sm">
                View
              </button>
            </form>
            <form
              method="GET"
              action="/tasks/<%= task.id %>/edit"
              class="d-inline"
            >
              <button type="submit" class="btn btn-outline-secondary btn-sm">
                Edit
              </button>
            </form>
            <form
              method="POST"
              action="/tasks/<%= task.id %>?_method=DELETE"
              class="d-inline"
            >
              <button class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
      <form method="GET" action="/tasks/new">
        <button type="submit" class="btn btn-success">Create New Task</button>
      </form>
    </div>
  </body>
</html>
